{
  "HydraConfig": {
    "SweepIntervalInMinutes":  3600,
    "Hydra": {
      "ServiceName": "hydraredismon-svcs",
      "ServiceIP": "10.0.9.*",
      "ServicePort": 10000,
      "ServiceType": "monitor",
      "ServiceDescription": "Redis monitoring and cleanup service",
      "Plugins": {
        "HydraLogger": {
          "LogToConsole": true,
          "OnlyLogLocally": false
        }
      },
      "Redis": {
        "Host": "redis",
        "Port": 6379,
        "Db": 0,
        "Options": "abortConnect=false,connectRetry=3,connectTimeout=5000"
      }
    }
  }
}